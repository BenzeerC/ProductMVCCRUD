@model ProductMVCCRUD.Models.Product

@{
    ViewData["Title"] = "Create";
}


<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="price" class="control-label"></label>
                <input asp-for="price" class="form-control" />
                <span asp-validation-for="price" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Imageurl" class="control-label"></label>
                <input  asp-for="Imageurl" class="form-control"  type="file" name="file" />
                <span asp-validation-for="Imageurl" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="cId" class="control-label"></label>
               <select class="form-control" asp-for="cId" asp-items="@(new SelectList(ViewBag.Categories,"cId","cName"))"></select>

               <span asp-validation-for="cName" class="text-danger"></span>
                
            </div>
            @*<div class="form-group mb-3">
                <label asp-for="Cname" class="control-label"></label>
                <input asp-for="Cname" class="form-control" />
                <span asp-validation-for="Cname" class="text-danger"></span>
            </div>*@
            <div class="form-group mb-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

